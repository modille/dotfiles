[user]
  email = "(none)"
  name = Matt Odille

[github]
  user = modille

[alias]
  br = branch
  branches = branch -a
  co = checkout
  d = diff
  dc = diff --cached
  f = fetch
  fp = fetch --prune
  l = log --name-status
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  push-up = push --set-upstream origin
  reset-hard = reset --hard HEAD^
  reset-soft = reset --soft HEAD^
  ri = rebase -i
  rpo = remote prune origin
  s = status

  # http://gggritso.com/human-git-aliases
  branches = branch -a
  discard = checkout --
  remotes = remote -v
  stashes = stash list
  tags = tag
  unstage = reset HEAD --

[color]
  ui = always
[color "diff"]
  commit = green
  frag = blue
  meta = blue bold
  new = green
  old = red
  whitespace = red reverse
[color "diff-highlight"]
  newHighlight = "green 22"
  newNormal = green
  oldHighlight = "red 52"
  oldNormal = red
[color "status"]
  added = green
  changed = yellow
  untracked = red

[commit]
  template = ~/.gitmessage

[core]
  autocrlf = input
  excludesfile = ~/.gitignore
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RX

[diff]
  guitool = diffmerge

[mergetool]
  keepBackup = false

[push]
  default = tracking
